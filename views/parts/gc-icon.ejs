<div id="changeGcPictureModal" class="fixed inset-0 bg-gray-900 bg-opacity-75 z-50 hidden flex items-center justify-center">
  <div class="bg-gray-800 rounded-lg shadow-xl w-full max-w-md p-6">
    <div class="flex justify-between items-center border-b border-gray-700 pb-3 mb-4">
      <h2 class="text-xl font-semibold text-white">Change Group Chat Picture</h2>
      <button onclick="closeChangeGcPictureModal()" class="text-gray-400 hover:text-white transition">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
      </button>
    </div>
    <form id="changeGcPictureForm" enctype="multipart/form-data">
      <input type="hidden" id="gcIdPictureChange" name="gcId">
      <div class="mb-4">
        <label for="gcPictureInput" class="block text-sm font-medium text-gray-300 mb-2">Select new picture (PNG, JPG, GIF)</label>
        <input type="file" id="gcPictureInput" name="picture" accept="image/png, image/jpeg, image/gif" required
          class="block w-full text-sm text-gray-400
            file:mr-4 file:py-2 file:px-4
            file:rounded-full file:border-0
            file:text-sm file:font-semibold
            file:bg-blue-700 file:text-white
            hover:file:bg-blue-600
          "/>
      </div>
      <div id="gcPicturePreview" class="mb-4 flex justify-center">
      </div>
      <div class="flex justify-end space-x-3">
        <button type="button" onclick="closeChangeGcPictureModal()" class="px-4 py-2 bg-gray-600 text-white rounded-full hover:bg-gray-500 transition">Cancel</button>
        <button type="submit" id="saveGcPictureButton" class="px-4 py-2 bg-green-600 text-white rounded-full hover:bg-green-500 transition">Save Changes</button>
      </div>
    </form>
  </div>
</div>